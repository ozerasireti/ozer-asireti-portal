        function dinle() {
            db.collection("sohbet").orderBy("tarih", "asc").onSnapshot(async (sn) => {
                const box = document.getElementById('chatbox'); box.innerHTML = "";
                const rSnap = await db.collection("rutbeler").get();
                const rMap = {}; rSnap.forEach(d => rMap[d.id] = d.data().rutbe);
                sn.forEach((doc) => {
                    const d = doc.data();
                    const isS = (d.isim.toLowerCase().includes("sait Ã¶zer") || d.isim.toLowerCase().includes("sait ozer"));
                    box.innerHTML += `<div class="${isS ? 'msg-lider' : 'msg-diger'}" onclick="panelAc('${d.isim}')">
                        <span class="${isS ? 'name-lider' : 'name-diger'}">${d.isim} <span class="unvan-tag">${rMap[d.isim] || (isS ? 'LÄ°DER' : 'ÃœYE')}</span></span>
                        <div>${d.mesaj}</div></div>`;
                });
                box.scrollTop = box.scrollHeight;
            });
        }

        function gonder() {
            const txt = document.getElementById('mInp').value;
            if(!txt) return;
            db.collection("sohbet").add({ isim: myAd, mesaj: txt, tarih: firebase.firestore.FieldValue.serverTimestamp() });
            document.getElementById('mInp').value = "";
            akilliTepki(txt);
        }

        async function akilliTepki(txt) {
            const t = txt.toLowerCase();
            let hedefBot = "";
            bots.forEach(b => { if(t.includes(b.toLowerCase().split(' ')[0])) { hedefBot = b; } });

            if(hedefBot && liderMi) {
                const talimat = `Sen Ã–zer AÅŸireti Ã¼yesi ${hedefBot}. Liderin Sait Ã–zer sana ÅŸunu dedi: "${txt}". AÅŸiret kÃ¼ltÃ¼rÃ¼yle, Ã§ok saygÄ±lÄ± ve kÄ±sa bir cevap ver. Sait Bey'e 'Liderim' veya 'AÄŸam' diye hitap et.`;
