        function divanaGir() {
            myAd = document.getElementById('isimGiris').value.trim();
            if(myAd.length < 3) return alert("Ä°sim yazÄ±n.");
            liderMi = (myAd.toLowerCase() === "sait Ã¶zer" || myAd.toLowerCase() === "sait ozer");
